pkgname=python2-jig
pkgver=0.1.6
pkgrel=1
pkgdesc="Check your code for stuff before you 'git commit'"
arch=('any')
url="https://pypi.python.org/pypi/jig"
license=('MIT')
groups=()
depends=('python2')
makedepends=('python2-distribute')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=(https://pypi.python.org/packages/source/j/jig/jig-$pkgver.tar.gz)
md5sums=('77df3d5d32786a7f9e74d288fe3d58c9')

package() {
  cd "$srcdir/jig-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

